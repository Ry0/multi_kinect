<!--   <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" /> -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find two_kinect_description)/launch/rviz/multi_kinect.rviz" required="true" />
</launch>
